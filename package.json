{
  "name": "webpack-video",
  "version": "1.0.0",
  "description": "大屏编辑器",
  "main": ".eslintrc.js",
  "scripts": {
    "build": "npm run clear && cross-env NODE_ENV=production webpack --config ./build/webpack.config.js",
    "start": "npm run clear && cross-env NODE_ENV=development PORT=8000 node server/index.js",
    "start:prod": "node server/index.js",
    "clear": "rimraf dist",
    "test": "npm run clear && cross-env NODE_ENV=development webpack --config ./build/webpack.config.js --progress",
    "pre-commit-msg": "echo '正在执行lint验证...' && exit 0",
    "tslint": "tslint -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
    "eslint": "eslint . --ext .js --ext .jsx"
  },
  "pre-commit": [
    "pre-commit-msg",
    "tslint",
    "eslint"
  ],
  "author": "",
  "license": "ISC",
